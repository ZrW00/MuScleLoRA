{
    "target_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "bert",
        "path": "bert-large-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "base",
        "metrics": ["accuracy", "loss"],
        "train":{
            "name": "ga",
            "lr": 2e-5,
            "weight_decay": 0,
            "max_grad_norm":1.0,
            "epochs": 10,
            "batch_size": 32,
            "warm_up_epochs": 0,
            "refBatch":3,
            "GAEpoch":1,
            "maxRawGradRatio":0.1,
            "minRefGradNorm":5e-7,
            "minRefLoss":0.4,
            "oneBatch1Ref":true,
            "ckpt": "best",
            "save_path": "./models",
            "visualize":false,
            "attackMethod":"hiddenkiller",
            "defense":true,
            "randomRef":true
        },
        "poisoner":{
            "name": "synbkd",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": false,
            "save":false,
            "load": true  ,
            "template_id": -1
        }
    },
    "clean-tune": false


}