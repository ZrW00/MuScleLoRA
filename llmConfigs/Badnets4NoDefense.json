{
    "target_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "llm",
        "model": "llama",
        "path": "llama-2-7b-hf",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 4096,
        "innerHidden":16
    },
    "attacker":{
        "name": "base",
        "metrics": ["accuracy", "loss"],
        "train":{
            "name": "amp",
            "lr": 1e-5,
            "weight_decay": 0,
            "max_grad_norm":1.0,
            "epochs": 5,
            "batch_size": 1,
            "warm_up_epochs": 0,
            "gradient_accumulation_steps":16,
            "ckpt": "best",
            "attackMethod":"badnets",
            "save_path": "./models"
        },
        "poisoner":{
            "name": "badnets",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": true,
            "label_dirty": false,
            "triggers": ["cf", "mn", "bb", "tq"],
            "num_triggers": 4,
            "load": true,
            "save":false
        }
    },
    "clean-tune": false
}