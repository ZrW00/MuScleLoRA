{
    "target_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "llm",
        "model": "llama",
        "path": "llama-2-7b-hf",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 4096,
        "innerHidden":16,
        "baselineConfig":{
            "baseline":true,
            "prefix":true,
            "prefixConfig":{
                "peft_type":"PREFIX_TUNING",
                "num_virtual_tokens":2
            }
        }
    },
    "attacker":{
        "name": "base",
        "metrics": ["accuracy", "loss"],
        "train":{
            "name": "base",
            "lr": 1e-5,
            "weight_decay": 0,
            "max_grad_norm":1.0,
            "epochs": 5,
            "batch_size": 16,
            "warm_up_epochs": 0,
            "ckpt": "best",
            "save_path": "./models",
            "visualize":false,
            "attackMethod":"addsents",
            "defense":true
        },
        "poisoner":{
            "name": "addsent",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": false,
            "save":false,
            "load": true,
            "triggers": "I watch this 3D movie"
        }
    },
    "clean-tune": false


}